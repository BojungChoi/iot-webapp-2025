@model MyPortfolioWebApp.Models.RegisterModel

@{
    ViewData["Title"] = "Register";
}

<section id="register" class="section">
    <div class="container section-title text-center" data-aos="fade-up">
        <h2 class="fw-bold">회원가입</h2>
        <p class="text-muted">비밀번호는 대소문자+번호+특수문자 6자리 이상 입력해주세요. </p>
    </div>

    <div class="container py-5" data-aos="fade-up" data-aos-delay="100">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="text-center text-primary fw-bold mb-4">
                            <i class="bi bi-person-circle me-2"></i>회원가입
                        </h3>

                        <form asp-action="Register">
                            <div asp-validation-summary="All" class="text-danger mb-3"></div>

                            <div class="form-group mb-3">
                                <label asp-for="Email" class="form-label">이메일</label>
                                <input asp-for="Email" class="form-control form-control-lg" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Password" class="form-label">패스워드</label>
                                <input asp-for="Password" class="form-control form-control-lg" />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label asp-for="ConfirmPassword" class="form-label">패스워드 확인</label>
                                <input asp-for="ConfirmPassword" class="form-control form-control-lg" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>

                            <button type="submit" class="btn btn-success w-100 py-2 fs-5 fw-bold">
                                <i class="bi bi-check-circle me-2"></i>회원가입 완료
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
